<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
    <class name="com.example.tests.ContactObject" table="addressbook">
        <id name="id" column="id"/>
        <property name="firstname" column="firstname"/>
        <property name="lastname" column="lastname"/>
        <property name="address" column="address"/>
        <property name="phone" column="home"/>
        <property name="mphone" column="mobile"/>
        <property name="wphone" column="work"/>
        <property name="mail" column="email"/>
        <property name="smail" column="email2"/>
        <property name="bday" column="bday"/>
        <property name="bmonth" column="bmonth"/>
        <property name="byear" column="byear"/>
        <property name="saddress" column="address2"/>
        <property name="sphone" column="phone2"/>
    </class>
</hibernate-mapping>


